{
  "name": "@syntatis/monorepo",
  "description": "Good ol'WordPress Admin Screen",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=18",
    "npm": ">=9"
  },
  "workspaces": [
    "packages/*",
    "site"
  ],
  "devDependencies": {
    "@storybook/addon-a11y": "^8.0.0",
    "@storybook/addon-essentials": "^8.0.0",
    "@storybook/addon-interactions": "^8.0.0",
    "@storybook/addon-links": "^8.0.0",
    "@storybook/addon-mdx-gfm": "^8.0.0",
    "@storybook/addon-themes": "^8.0.5",
    "@storybook/blocks": "^8.0.0",
    "@storybook/manager-api": "^8.0.0",
    "@storybook/react": "^8.0.0",
    "@storybook/react-vite": "^8.0.0",
    "@storybook/test": "^8.0.0",
    "@storybook/theming": "^8.0.0",
    "@syntatis/eslint-config": "file:./packages/eslint-config",
    "@syntatis/kubrick": "file:./packages/kubrick",
    "@syntatis/stylelint-config": "file:./packages/stylelint-config",
    "@testing-library/jest-dom": "^6.3.0",
    "@testing-library/react": "^16.0.0",
    "@types/react": "^18.2.48",
    "@types/react-dom": "^18.2.18",
    "@vitejs/plugin-react": "^4.2.1",
    "@vitest/coverage-istanbul": "^2.0.5",
    "@wordpress/icons": "^10.4.0",
    "chromatic": "^11.0.0",
    "eslint": "^8.55.0",
    "eslint-plugin-storybook": "^0.8.0",
    "jsdom": "^24.0.0",
    "lerna": "^8.1.8",
    "prettier": "^3.2.4",
    "sass": "^1.70.0",
    "storybook": "^8.0.0",
    "stylelint": "^16.2.0",
    "typescript": "^5.3.3",
    "vite-plugin-external": "^4.3.1",
    "vite-plugin-lib-inject-css": "^2.0.1",
    "vite-tsconfig-paths": "^4.0.0",
    "vitest": "^2.0.5"
  },
  "scripts": {
    "build": "npm run build -w @syntatis/kubrick",
    "chromatic": "chromatic --build-script-name=storybook:build",
    "fmt": "npm run fmt:scripts && npm run fmt:styles",
    "fmt:scripts": "eslint . --fix",
    "fmt:styles": "stylelint '**/*.scss' --fix",
    "lint": "npm run lint:scripts && npm run lint:styles && npm run lint:types",
    "lint:scripts": "eslint .",
    "lint:styles": "stylelint '**/*.scss'",
    "lint:types": "tsc --noEmit",
    "site:dev": "npm run dev -w @syntatis/site",
    "site:preview": "npm run preview -w @syntatis/site",
    "storybook": "storybook dev -p 6007",
    "storybook:build": "storybook build",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest"
  }
}

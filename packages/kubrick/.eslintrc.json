{
	"root": true,
	"extends": [
		"@syntatis/eslint-config"
	],
	"overrides": [
		{
			"files": [
				"*.stories.{js,jsx,ts,tsx}",
				".storybook/*.{js,jsx,ts,tsx}"
			],
			"rules": {
				"import/no-default-export": "off"
			}
		},
		{
			"files": [
				"*.test.{js,jsx,ts,tsx,mts}"
			],
			"rules": {
				"@typescript-eslint/ban-ts-comment": "off",
				"import/no-named-as-default": "off"
			}
		}
	]
}

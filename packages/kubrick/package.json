{
  "name": "@syntatis/kubrick",
  "description": "Classic WordPress Admin UI",
  "version": "0.1.0-alpha.6",
  "license": "GPL-2.0-or-later",
  "type": "module",
  "keywords": [
    "admin-dashboard",
    "css-modules",
    "react",
    "component-library",
    "wordpress"
  ],
  "sideEffects": [
    "**/*.css"
  ],
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@react-aria/checkbox": "^3.13.0",
    "@react-aria/utils": "^3.23.0",
    "@react-stately/checkbox": "^3.6.1",
    "@react-stately/collections": "^3.10.4",
    "react-aria": "^3.31.1",
    "react-stately": "^3.29.1",
    "vite-plugin-external": "^4.3.1",
    "vite-plugin-lib-inject-css": "^2.0.1",
    "vite-tsconfig-paths": "^4.0.0"
  },
  "devDependencies": {
    "@storybook/react": "^8.0.0",
    "@storybook/react-vite": "^8.0.0",
    "@syntatis/eslint-config": "^0.2.5",
    "@syntatis/stylelint-config": "^0.1.9",
    "@testing-library/jest-dom": "^6.3.0",
    "@testing-library/react": "^16.0.0",
    "@testing-library/user-event": "^14.5.2",
    "@types/jsdom": "^21.1.7",
    "@vitejs/plugin-react": "^4.2.1",
    "@vitest/coverage-istanbul": "^2.0.5",
    "@vitest/coverage-v8": "^2.1.1",
    "glob": "^11.0.0",
    "jsdom": "^25.0.0",
    "prettier": "^3.2.4",
    "react": "^18.0.0",
    "sass": "^1.70.0",
    "stylelint": "^16.2.0",
    "typescript": "^5.3.3",
    "vite": "^5.1.1",
    "vite-plugin-dts": "^4.0.0",
    "vite-plugin-lib-inject-css": "^2.0.0",
    "vite-tsconfig-paths": "^5.0.1",
    "vitest": "^2.1.1"
  },
  "peerDependencies": {
    "@wordpress/icons": "^10.4.0",
    "react": "^18.0.0",
    "react-dom": "^18.0.0"
  },
  "scripts": {
    "build": "vite build",
    "format": "npm run format:scripts && npm run format:styles",
    "format:scripts": "eslint . --fix",
    "format:styles": "stylelint '**/*.scss' --fix",
    "lint:scripts": "eslint .",
    "lint:styles": "stylelint '**/*.{css,scss,sass}'",
    "lint:types": "tsc --noEmit",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest"
  }
}

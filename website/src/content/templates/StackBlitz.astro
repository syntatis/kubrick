---
export interface Props {
	path: string;
}

/**
 * Constants, and Variables.
 */
const { path } = Astro.props;
---

<a
	class="text-[#1389fd] hover:text-[#1389fd] flex items-center gap-1 no-underline text-xs font-bold py-2 px-4 bg-[#1389fd] rounded-full"
	style="--tw-bg-opacity: 0.1;"
	href={`https://stackblitz.com${path}`}
	target="_blank"
>
	<svg viewBox="0 0 28 28" aria-hidden="true" height="24" width="24" style="color: #1389fd;" class="w-4 h-auto block">
		<path fill="currentColor" d="M12.747 16.273h-7.46L18.925 1.5l-3.671 10.227h7.46L9.075 26.5l3.671-10.227z" />
	</svg>
	<span>StackBlitz</span>
</a>
